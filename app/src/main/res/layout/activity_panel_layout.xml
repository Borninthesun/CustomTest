<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PanelLayoutActivity">

        <com.example.customtest.widget.slidenestedpanel.SlideNestedPanelLayout
            android:id="@+id/snpl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:anchorPoint="0.65"
            app:panelHeight="250dp"
            app:parallaxOffset="50dp"
            app:scrollView="@+id/nestedScrollView">

            <include
                android:id="@+id/main_top"
                layout="@layout/include_main_top" />

            <include
                android:id="@+id/main_content"
                layout="@layout/include_main_content" />

        </com.example.customtest.widget.slidenestedpanel.SlideNestedPanelLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
